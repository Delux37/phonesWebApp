@model PhoneViewModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<form asp-action="AddPhone" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="PhoneName">Phone Name:</label>
        <input asp-for="PhoneName" class="form-control" />
        <span asp-validation-for="PhoneName" class="text-danger"></span> 
    </div>
       
    <div class="form-group">
        <label asp-for="PhoneInfo">Phone Info:</label>
        <input asp-for="PhoneInfo" class="form-control" />
        <span asp-validation-for="PhoneInfo" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Price">Phone price:</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
  
    <input type="submit" class="submit-button" value="Submit" />
</form>


